<div id="<%= dom_id(offer) %>">
  <div class="flex flex-col md:flex-row items-center px-4 py-4 sm:px-6 justify-between">
    <div class="flex-1">
      <%= link_to offer.title, edit_offer_path(offer), class: "text-lg text-blue-600 hover:text-blue-700",
      data: {
       action: "click->slideover#open",
       remote: true 
              } %>
      <div class="flex space-x-2 text-gray-500 text-sm">
        <div>
          <%= offer.location %>
        </div>
        <div>
          <%= offer.offer_type.humanize %>
        </div>
      </div>
    </div>
    <div class="text-right">
      <%= button_to "Delete offer", offer_path(offer), method: :delete, class: "btn border border-red-200 hover:bg-red-100 text-sm text-red-700", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>